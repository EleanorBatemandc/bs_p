<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.bookstore.mapper.CustomerMapper">

    <resultMap id="CustomerResult" type="com.bookstore.entity.Customer">
        <id column="customerID" property="customerID"/>
        <result column="firstName" property="firstName"/>
        <result column="lastName" property="lastName"/>
        <result column="email" property="email"/>
        <result column="password" property="password"/>
        <result column="age" property="age"/>
        <result column="nationality" property="nationality"/>
        <result column="language" property="language"/>
        <result column="religion" property="religion"/>
        <result column="profession" property="profession"/>
        <result column="userID" property="userID"/>
        <result column="bankcardID" property="bankcardID"/>
    </resultMap>

    <select id="findAll" resultMap="CustomerResult">
        SELECT customerID, firstName, lastName, email, password, age, nationality, language, religion, profession, userID, bankcardID
        FROM customers
        ORDER BY customerID DESC
    </select>

    <select id="count" resultType="long">
        SELECT COUNT(*) FROM customers
    </select>

    <insert id="insert" useGeneratedKeys="true" keyProperty="customerID">
        INSERT INTO customers (firstName, lastName, email, password, age, nationality, language, religion, profession, userID, bankcardID)
        VALUES (#{firstName}, #{lastName}, #{email}, #{password}, #{age}, #{nationality}, #{language}, #{religion}, #{profession}, #{userID}, #{bankcardID})
    </insert>
</mapper>
